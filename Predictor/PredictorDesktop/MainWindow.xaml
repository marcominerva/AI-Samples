<Window
    x:Class="PredictorDesktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PredictorDesktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Sentiment Analysis"
    Width="800"
    Height="450"
    FontSize="18"
    mc:Ignorable="d">

    <Grid>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBox
            x:Name="txtSentence"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Height="200"
            Margin="5" />
        <TextBlock
            x:Name="lblAnalyzeResult"
            Grid.Row="1"
            Grid.Column="0" />
        <Button
            x:Name="btnAnalyze"
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            Padding="10"
            Click="btnAnalyze_Click"
            Content="Analyze" />
    </Grid>
    </Grid>
</Window>
